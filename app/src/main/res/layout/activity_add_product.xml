<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Header -->
    <TextView
        android:id="@+id/tvAddProductHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_product"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Product Name -->
    <TextView
        android:id="@+id/tvProductNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_product_name"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_product_name"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Price -->
    <TextView
        android:id="@+id/tvProductPriceLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_product_price"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_product_price"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvProductDescriptionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_product_description"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_product_description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:layout_marginBottom="16dp"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="8dp"/>

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/ivProductImagePreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="Product Image Preview"
        android:layout_marginBottom="16dp" />

    <!-- Image Picker -->
    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_pick_image"
        android:layout_marginBottom="24dp"/>

    <!-- Add Product Button -->
    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_product"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

  </LinearLayout>
</ScrollView>
